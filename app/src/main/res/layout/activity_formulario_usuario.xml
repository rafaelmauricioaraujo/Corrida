<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/activity_formulario_usuario_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Nome"
            android:inputType="textCapWords">

        </EditText>

        <RadioGroup
            android:id="@+id/activity_formulario_usuario_genero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/activity_formulario_usuario_genero_feminino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FEMININO"
                android:layout_margin="8dp">
            </RadioButton>

            <RadioButton
                android:id="@+id/activity_formulario_usuario_genero_masculino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="MASCULINO">
            </RadioButton>
        </RadioGroup>

        <EditText
            android:id="@+id/activity_formulario_usuario_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Email"
            android:inputType="textEmailAddress">

        </EditText>

        <EditText
            android:id="@+id/activity_formulario_usuario_senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Senha"
            android:inputType="textPassword">

        </EditText>

        <EditText
            android:id="@+id/activity_formulario_usuario_telefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Telefone"
            android:inputType="phone">

        </EditText>

        <EditText
            android:id="@+id/activity_formulario_usuario_disciplina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Disciplina"
            android:inputType="text">

        </EditText>    <EditText
            android:id="@+id/activity_formulario_usuario_turma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Turma"
            android:inputType="text">

        </EditText>

        <Button
            android:id="@+id/activity_formulario_usuario_botao_registrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Registrar">
        </Button>
    </LinearLayout>
</ScrollView>