<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/activity_login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:autofillHints="no"
        android:hint="@string/email_login"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/activity_login_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="@string/senha_login"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/activity_login_botao_entrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick="login"
        android:text="@string/login_btn" />

    <Button
        android:id="@+id/activity_login_botao_registrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick="registrar"
        android:text="@string/registrar_btn" />

</LinearLayout>