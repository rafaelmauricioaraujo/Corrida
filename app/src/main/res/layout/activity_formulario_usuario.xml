<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/activity_registrar_imageView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:contentDescription="user_image"
                android:visibility="visible"
                app:srcCompat="@mipmap/ic_launcher_round"
                tools:srcCompat="@tools:sample/avatars" />

            <Button
                android:id="@+id/activity_registrar_botao_foto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ALTERAR" />
        </LinearLayout>

        <EditText
            android:id="@+id/activity_formulario_usuario_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:importantForAutofill="no"
            android:hint="@string/nome_form"
            android:inputType="textCapWords">

        </EditText>

        <RadioGroup
            android:id="@+id/activity_formulario_usuario_genero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:importantForAutofill="no"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/activity_formulario_usuario_genero_feminino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/masc_rd_btn"
                android:layout_margin="8dp">
            </RadioButton>

            <RadioButton
                android:id="@+id/activity_formulario_usuario_genero_masculino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/fem_rd_btn">
            </RadioButton>
        </RadioGroup>

        <EditText
            android:id="@+id/activity_formulario_usuario_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:importantForAutofill="no"
            android:hint="@string/email_form"
            android:inputType="textEmailAddress">

        </EditText>

        <EditText
            android:id="@+id/activity_formulario_usuario_senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:importantForAutofill="no"
            android:hint="@string/senha_form"
            android:inputType="textPassword">

        </EditText>

        <EditText
            android:id="@+id/activity_formulario_usuario_telefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:importantForAutofill="no"
            android:hint="@string/tel_form"
            android:inputType="phone">

        </EditText>

        <EditText
            android:id="@+id/activity_formulario_usuario_disciplina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:importantForAutofill="no"
            android:hint="@string/discp_form"
            android:inputType="text">

        </EditText>

        <EditText
            android:id="@+id/activity_formulario_usuario_turma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:importantForAutofill="no"
            android:hint="@string/turma_form"
            android:inputType="text">

        </EditText>

    </LinearLayout>
</ScrollView>